<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"

        android:layout_marginHorizontal="22dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="@drawable/rounder_border"
                android:padding="10dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView

            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"

            android:textSize="22dp"
            android:lineHeight="19.36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Interest Calculator"
            android:textAlignment="center"
            app:lineHeight="19.36dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="20dp"

        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="Principal Amount"
            android:textSize="16dp"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/principalAmount"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:padding="10dp"
            android:background="@drawable/rounder_border"
            android:inputType="number"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Rate in (%)"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginEnd="35dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/interestReturn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Intrest"
            android:padding="10dp"
            android:background="@drawable/rounder_border"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="Time Period in (yr)"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/timePeriod"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="05"
            android:padding="10dp"
            android:background="@drawable/rounder_border"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/calculateInterest"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainColor"
        android:fontFamily="@font/inter_medium"
        android:text="Calculate"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invested"
                android:textSize="16sp"
                android:height="19.36dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"
                />

            <TextView
                android:id="@+id/totalInterestAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="---"
                android:textSize="16sp"
                android:height="19.36dp"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"

                >

            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>