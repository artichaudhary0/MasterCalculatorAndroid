<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:background="@color/background"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"

        android:layout_marginHorizontal="22dp">
        <ImageView
            android:id="@+id/backButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/rounder_border"
            android:padding="10dp"
            android:layout_gravity="center"/>


        <TextView

            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"

            android:textSize="22sp"
            android:lineHeight="19.36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Discount Calculator"
            android:textAlignment="center"
            app:lineHeight="19.36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:layout_marginEnd="67dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/priceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Your Price"
            android:backgroundTint="@color/background"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="Discount"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/discountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:hint="Enter Your Discount"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/calculateDiscount"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainColor"
        android:fontFamily="@font/inter_medium"
        android:text="Count"
        android:paddingVertical="5dp"
        android:elevation="15dp"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </com.google.android.material.divider.MaterialDivider>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:text="Price After Discount : "
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            app:lineHeight="19.36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalPriceAfterDiscount"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:text="---"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            app:lineHeight="19.36dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:text="Saved Amount : "
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            app:lineHeight="19.36dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/totalSavePrice"
            android:fontFamily="@font/inter"
            android:text="---"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            app:lineHeight="19.36dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:padding="10dp">


    </LinearLayout>

</LinearLayout>