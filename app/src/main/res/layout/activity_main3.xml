<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/backButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/rounder_border"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView

            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"

            android:textSize="22sp"
            android:lineHeight="19.36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Mutual Fund Calculator"
            android:textAlignment="center"
            app:lineHeight="19.36dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"

        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="55dp"
            android:text="Montly Investment"
            android:textSize="16dp"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/monthlyInvest"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="500"
            android:padding="10dp"
            android:background="@drawable/rounder_border"

            android:inputType="number"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expected Return in (%)"
            android:textSize="16dp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginEnd="24dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/returnValue"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="25%"
            android:padding="10dp"
            android:background="@drawable/rounder_border"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"

            android:text="Time Period in (yr)"
            android:textSize="16dp"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/timePeriod"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="05"
            android:padding="10dp"
            android:background="@drawable/rounder_border"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/calculateValue"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainColor"
        android:fontFamily="@font/inter_medium"
        android:text="Calculate"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:translationZ="5dp"
        android:outlineProvider="background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:textAlignment="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invested"
                android:textSize="16dp"
                android:height="19.36dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"
                />

            <TextView
                android:id="@+id/totalInvested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="---"
                android:textSize="16dp"
                android:height="19.36dp"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"

                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Est. Returns"
                android:textSize="16dp"
                android:height="19.36dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium" />

            <TextView
                android:id="@+id/totalReturns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="---"
                android:textSize="16dp"
                android:height="19.36dp"

                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Value"
                android:textSize="16dp"
                android:height="19.36dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"/>

            <TextView
                android:id="@+id/totalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="---"
                android:textSize="16dp"
                android:height="19.36dp"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"

                />
        </LinearLayout>



    </LinearLayout>



</LinearLayout>