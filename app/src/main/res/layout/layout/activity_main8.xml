<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="22dp"
        >
        <ImageView
            android:id="@+id/backButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/rounder_border"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView

            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"
            android:textSize="22sp"
            android:lineHeight="19.36sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Square or Hour"
            android:textAlignment="center"
            app:lineHeight="19.36dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="Input Number"
            android:textSize="16dp"

            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numberEntered"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:background="@drawable/rounder_border"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="Add Square or Hour"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/squareOrHour"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounder_border"
            android:hint="Square or hour"

            android:inputType="number"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/calculateSquare"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainColor"
        android:elevation="5dp"
        android:fontFamily="@font/inter_medium"
        android:paddingVertical="5dp"
        android:text="Calculate"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp">


        <LinearLayout
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Result"
                android:textAlignment="center"
                android:textSize="16sp"
                app:lineHeight="19.36dp" />

            <TextView
                android:id="@+id/schoolResult"
                android:fontFamily="@font/inter_medium"
                android:text="---"
                android:textAlignment="center"
                android:textSize="16sp"
                app:lineHeight="19.36dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>